      const wall = document.getElementById('legacyWall');
      const brickCount = 156;
      
      for (let i = 0; i < brickCount; i++) {
        const brick = document.createElement('div');
        brick.className = 'brick h-3 animate-pulse';
        brick.style.animationDelay = `${Math.random() * 2}s`;
        brick.style.animationDuration = `${2 + Math.random() * 2}s`;
        wall.appendChild(brick);
      }
    }

